@{
    var userEmail = Context.Session.GetString("UserEmail");
    var firstName = ViewBag.FirstName?.ToString() ?? "";
    var lastName = ViewBag.LastName?.ToString() ?? "";
    var userName = ViewBag.UserName?.ToString() ?? "Admin";
    
    var initials = "";
    if (!string.IsNullOrEmpty(firstName) && !string.IsNullOrEmpty(lastName))
    {
        initials = (firstName.Substring(0, 1) + lastName.Substring(0, 1)).ToUpper();
    }
    else if (!string.IsNullOrEmpty(firstName))
    {
        initials = firstName.Substring(0, Math.Min(2, firstName.Length)).ToUpper();
    }
    else
    {
        initials = "AD";
    }

    var activePage = ViewBag.ActivePage?.ToString() ?? "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CareFleet</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Outfit:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/admin-dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/doctors-page.css" asp-append-version="true" />

</head>
<body>
    <div class="admin-container">
        <!-- Left Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <h1 class="logo">CareFleet</h1>
            </div>
            <nav class="sidebar-nav">
                <a href="@Url.Action("Dashboard", "Admin")" class="nav-item @(activePage == "Dashboard" ? "active" : "")">
                    <i class="fas fa-home"></i>
                    <span>Dashboard</span>
                </a>
                <a href="@Url.Action("Users", "Admin")" class="nav-item @(activePage == "Users" ? "active" : "")">
                    <i class="fas fa-users-cog"></i>
                    <span>Users</span>
                </a>
                <a href="@Url.Action("Doctors", "Admin")" class="nav-item @(activePage == "Doctors" ? "active" : "")">
                    <i class="fas fa-user-md"></i>
                    <span>Doctors</span>
                </a>
                <a href="@Url.Action("Patients", "Admin")" class="nav-item @(activePage == "Patients" ? "active" : "")">
                    <i class="fas fa-user-injured"></i>
                    <span>Patients</span>
                </a>
                <a href="@Url.Action("Appointments", "Admin")" class="nav-item @(activePage == "Appointments" ? "active" : "")">
                    <i class="fas fa-calendar-check"></i>
                    <span>Appointments</span>
                </a>

                <a href="@Url.Action("Reports", "Admin")" class="nav-item @(activePage == "Reports" ? "active" : "")">
                    <i class="fas fa-file-alt"></i>
                    <span>Reports</span>
                </a>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            @if (ViewBag.HideHeader != true)
            {
                <!-- Header -->
                <header class="content-header">
                    @if (activePage == "Dashboard")
                    {
                        <h2 class="welcome-text fw-bold">Welcome, @userName!</h2>
                    }
                    else
                    {
                        <h2 class="welcome-text fw-bold">@ViewBag.HeaderTitle</h2>
                    }
                    <div class="header-actions">
                        <button class="icon-btn">
                            <i class="fas fa-bell"></i>
                        </button>
                        <div class="user-profile" onclick="toggleDropdown()">
                            <div class="avatar">@initials</div>
                            <i class="fas fa-chevron-down"></i>
                            <div class="dropdown-menu" id="userDropdown">
                                <a href="@Url.Action("Logout", "Account")">Logout</a>
                            </div>
                        </div>
                    </div>
                </header>
            }
            else
            {
                <!-- Minimal Header when using Premium Card -->
                <header class="content-header" style="justify-content: space-between; padding-bottom: 0; background: transparent; border-bottom: none; box-shadow: none;">
                    @if (activePage == "Dashboard")
                    {
                        <h2 class="welcome-text fw-bold">Welcome, @userName!</h2>
                    }
                    else
                    {
                        <h2 class="welcome-text fw-bold">@ViewBag.HeaderTitle</h2>
                    }
                    <div class="header-actions">
                        <button class="icon-btn">
                            <i class="fas fa-bell"></i>
                        </button>
                        <div class="user-profile" onclick="toggleDropdown()">
                            <div class="avatar">@initials</div>
                            <i class="fas fa-chevron-down"></i>
                            <div class="dropdown-menu" id="userDropdownMinimal">
                                <a href="@Url.Action("Logout", "Account")">Logout</a>
                            </div>
                        </div>
                    </div>
                </header>
            }


            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">
                    <i class="fas fa-check-circle"></i> @TempData["Success"]
                </div>
            }

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-error">
                    @ViewBag.Error
                </div>
            }

            @RenderBody()
        </main>
    </div>

    <script>
        function toggleDropdown() {
            const dropdown = document.getElementById('userDropdown');
            const dropdownMinimal = document.getElementById('userDropdownMinimal');
            
            if (dropdown) dropdown.style.display = dropdown.style.display === 'block' ? 'none' : 'block';
            if (dropdownMinimal) dropdownMinimal.style.display = dropdownMinimal.style.display === 'block' ? 'none' : 'block';
        }

        // Close dropdown when clicking outside
        document.addEventListener('click', function(event) {
            const profiles = document.querySelectorAll('.user-profile');
            const dropdowns = [document.getElementById('userDropdown'), document.getElementById('userDropdownMinimal')];
            
            let clickedInside = false;
            profiles.forEach(p => { if (p.contains(event.target)) clickedInside = true; });
            
            if (!clickedInside) {
                dropdowns.forEach(d => { if (d) d.style.display = 'none'; });
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

