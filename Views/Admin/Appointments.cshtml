@model IEnumerable<CareFleet.Models.Appointment>
@{
    ViewData["Title"] = "Appointments Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.ActivePage = "Appointments";
    ViewBag.HeaderTitle = "System Appointments";
    ViewBag.HideHeader = true;
}

@section Scripts {
    <link rel="stylesheet" href="~/css/admin-pages.css" />
}

<div class="fade-in">
    <!-- Premium Header Card -->
    <div class="premium-header-card">
        <div class="header-card-content">
            <div class="header-info">
                <h3 class="fw-bold text-white mb-2">Appointments Management</h3>
                <p class="text-white-50 mb-0">View and coordinate system-wide appointments.</p>
            </div>
            <div class="header-actions">
                <select id="statusFilter" class="form-control" style="width: auto; background: white; border-radius: 8px;">
                    <option value="">All Statuses</option>
                    <option value="Pending">Pending</option>
                    <option value="Confirmed">Confirmed</option>
                    <option value="Completed">Completed</option>
                    <option value="Cancelled">Cancelled</option>
                </select>
            </div>
        </div>
        <div class="header-bg-pattern"></div>
    </div>

    <div class="table-container">
        <table class="data-table" id="appointmentsTable">
            <thead>
                <tr>
                    <th>Date & Time</th>
                    <th>Patient</th>
                    <th>Doctor</th>
                    <th>Reason</th>
                    <th>Status</th>
                    <th style="text-align: right;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var appointment in Model)
                    {
                        <tr data-status="@appointment.Status">
                            <td>
                                <div style="font-weight: 600; color: #1B3C53;">@appointment.AppointmentDate.ToString("MMM dd, yyyy")</div>
                                <div style="font-size: 13px; color: #456882;">@appointment.TimeSlot</div>
                            </td>
                            <td>
                                <div style="font-weight: 500;">@(appointment.Patient != null ? $"{appointment.Patient.FirstName} {appointment.Patient.LastName}" : "Unknown Patient")</div>
                            </td>
                            <td>
                                <div style="color: #456882; font-weight: 500;">
                                    <i class="fas fa-user-md" style="font-size: 12px; opacity: 0.7;"></i> 
                                    @(appointment.Doctor != null ? $"Dr. {appointment.Doctor.FirstName} {appointment.Doctor.LastName}" : "Unassigned")
                                </div>
                            </td>
                            <td>
                                <div style="max-width: 150px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; font-size: 13px;" title="@appointment.Reason">
                                    @appointment.Reason
                                </div>
                            </td>
                            <td>
                                <span class="status-badge @appointment.Status.ToLower()">@appointment.Status</span>
                            </td>
                            <td>
                                <div class="action-buttons" style="justify-content: flex-end;">
                                    <button class="btn-icon view" title="View Details">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button class="btn-icon delete" title="Cancel Appointment">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" style="text-align: center; padding: 40px; color: #718096;">
                            <i class="fas fa-calendar-times" style="font-size: 48px; margin-bottom: 15px; display: block; opacity: 0.3;"></i>
                            No appointments found in the system.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const statusFilter = document.getElementById('statusFilter');
        if (statusFilter) {
            statusFilter.addEventListener('change', function() {
                const val = this.value;
                const rows = document.querySelectorAll('#appointmentsTable tbody tr');
                
                rows.forEach(row => {
                    if (row.cells.length > 1) {
                        if (val === "" || row.dataset.status === val) {
                            row.style.display = '';
                        } else {
                            row.style.display = 'none';
                        }
                    }
                });
            });
        }
    });
</script>

