@{
    ViewData["Title"] = "System Settings";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.ActivePage = "Settings";
    ViewBag.HideHeader = true;
}

<div class="fade-in">
    <!-- Premium Header Card -->
    <div class="premium-header-card">
        <div class="header-card-content">
            <div class="header-info">
                <h3 class="fw-bold text-white mb-2">System Settings</h3>
                <p class="text-white-50 mb-0">Manage system-wide configurations and security.</p>
            </div>
        </div>
        <div class="header-bg-pattern"></div>
    </div>

    <div class="form-container">

    <form>
        <div class="form-group">
            <label>System Name</label>
            <input type="text" class="form-control" value="CareFleet Healthcare System" />
        </div>
        <div class="form-group">
            <label>Admin Email Notification</label>
            <input type="email" class="form-control" value="admin@carefleet.com" />
        </div>
        <div class="form-group">
            <label>Maintenance Mode</label>
            <select class="form-control">
                <option>Disabled</option>
                <option>Enabled</option>
            </select>
        </div>
        <div class="form-actions">
            <button type="button" class="btn-primary">Save Changes</button>
        </div>
    </form>
</div>
</div>

