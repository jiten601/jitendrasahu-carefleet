@model IEnumerable<CareFleet.Models.Patient>
@{
    ViewData["Title"] = "My Patients";
    Layout = "~/Views/Shared/_DoctorLayout.cshtml";
    ViewBag.ActivePage = "Patients";
    ViewBag.HideHeader = true;
}

<div class="doctor-patients-page fade-in">
    <!-- Premium Header Card -->
    <div class="premium-header-card mb-4">
        <div class="header-card-content">
            <div class="header-info">
                <h2 class="fw-800 text-white mb-2">My Patients</h2>
                <p class="text-white opacity-75 mb-0">Manage and view your assigned patient base.</p>
            </div>
            <div class="header-actions">
                <form asp-action="Patients" method="get" class="d-flex w-100">
                    <div class="premium-search-container rounded-pill px-4 py-2 d-flex align-items-center flex-grow-1" style="width: 300px;">
                        <i class="fas fa-search text-white me-3"></i>
                        <input type="text" name="searchString" value="@ViewBag.CurrentFilter" class="border-0 bg-transparent flex-grow-1 text-white" placeholder="Search patients..." style="outline: none; font-size: 14px;" onblur="this.form.submit()" onkeypress="if(event.keyCode == 13) { this.form.submit(); return false; }">
                    </div>
                </form>
            </div>
        </div>
        <div class="header-bg-pattern"></div>
    </div>


    <!-- Main Content -->
    <div class="row g-4">
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                var initials = ((item.FirstName?.Length > 0 ? item.FirstName.Substring(0, 1) : "P") + 
                               (item.LastName?.Length > 0 ? item.LastName.Substring(0, 1) : "A")).ToUpper();
                
                <div class="col-xl-3 col-lg-4 col-md-6">
                    <div class="patient-card-premium h-100">
                        <div class="card-body-premium p-4 text-center">
                            <span class="patient-id-badge">ID: #@item.Id.ToString("D5")</span>
                            
                            <div class="patient-avatar-wrapper">
                                <div class="patient-avatar-circle">
                                    @initials
                                </div>
                                <span class="online-indicator"></span>
                            </div>
                            
                            <h6 class="fw-800 mb-1">@item.FirstName @item.LastName</h6>
                            
                            <div class="d-flex justify-content-center gap-2 mb-4">
                                @{
                                    var genderClass = item.Gender == "Male" ? "bg-info-subtle text-info" : "bg-danger-subtle text-danger";
                                }
                                <span class="badge @genderClass px-2 py-1 rounded-pill x-small border border-opacity-10">@item.Gender</span>
                                <span class="badge bg-light text-secondary px-2 py-1 rounded-pill x-small border">Regular</span>
                            </div>

                            <!-- Info Grid -->
                            <div class="info-grid-premium text-start border rounded-3 p-3 mb-4 bg-light bg-opacity-50">
                                <div class="info-item-sm mb-2">
                                    <div class="info-icon-sq"><i class="fas fa-phone-alt"></i></div>
                                    <span>@item.PhoneNumber</span>
                                </div>
                                <div class="info-item-sm">
                                    <div class="info-icon-sq"><i class="fas fa-calendar-check"></i></div>
                                    <span>Since @item.CreatedAt.ToString("MMM yyyy")</span>
                                </div>
                            </div>

                            <!-- Actions -->
                            <div class="d-grid gap-2">
                                <a href="@Url.Action("MedicalRecords", "Doctor", new { patientId = item.Id })" class="btn btn-primary btn-sm fw-bold rounded-3 py-2">
                                    View History
                                </a>
                                <a href="@Url.Action("Messages", "Doctor")" class="btn btn-outline-secondary btn-sm fw-bold rounded-3 py-2">
                                    Message
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="dashboard-card p-5 text-center">
                    <div class="mb-3">
                        <div class="d-inline-flex align-items-center justify-content-center bg-light rounded-circle shadow-sm" style="width: 80px; height: 80px;">
                            <i class="fas fa-user-friends text-secondary opacity-25 fs-1"></i>
                        </div>
                    </div>
                    <h5 class="fw-bold mb-2">No Patients Found</h5>
                    <p class="text-secondary small mb-0">Patients assigned to you will appear here.</p>
                </div>
            </div>
        }
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/doctor-patients.css" asp-append-version="true" />
}
