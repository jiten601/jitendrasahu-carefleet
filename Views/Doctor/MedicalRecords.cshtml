    }

    .icon-box-sm {
        width: 32px;
        height: 32px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 14px;
    }

    .btn-action-light {
        width: 36px;
        height: 36px;
        border-radius: 10px;
