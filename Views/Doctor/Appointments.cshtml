@model IEnumerable<CareFleet.Models.Appointment>
@{
    ViewData["Title"] = "Appointments";
    Layout = "~/Views/Shared/_DoctorLayout.cshtml";
    ViewBag.ActivePage = "Appointments";
    ViewBag.HideHeader = true;
}

<!-- Premium Header Card -->
<div class="doctor-appointments-page fade-in">
    <div class="premium-header-card mb-4">
        <div class="header-card-content">
            <div class="header-info">
                <h1 class="fw-800 text-white mb-0">Appointment Schedule</h1>
            </div>
            <div class="header-actions">
                <div class="btn-group shadow-sm bg-white rounded-3 p-1">
                    <button class="btn btn-sm px-4 fw-bold rounded-3 active-toggle">All</button>
                    <button class="btn btn-sm px-4 fw-bold rounded-3 text-secondary">Today</button>
                </div>
            </div>
        </div>
        <div class="header-bg-pattern"></div>
    </div>

    <!-- Main Content -->
    <div class="premium-card rounded-4 overflow-hidden">

        <!-- Header -->
        <div class="card-header-premium d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 px-4 py-3">
            <div class="d-flex align-items-center">
                <div class="header-icon-container me-3">
                    <i class="fas fa-calendar-alt"></i>
                </div>

                <div>
                    <h5 class="fw-800 fw-semibold">Scheduled Consultations</h5>
                    <div class="d-flex align-items-center mt-1">
                        <span class="badge bg-primary-subtle text-primary fw-700 px-2 py-1 rounded-pill small">
                            @(Model != null ? Model.Count() : 0) Total Appointments
                        </span>

                        @if (ViewBag.CurrentFilter != null)
                        {
                            <span class="ms-2 badge bg-light text-secondary border fw-600 px-1 py-1 rounded-pill small">
                                Filtered by: "@ViewBag.CurrentFilter"
                            </span>
                        }
                    </div>
                </div>
            </div>

            <!-- Search -->
            <div class="search-container-premium">
                <form asp-action="Appointments" method="get" class="m-0">
                    <div class="search-input-group">
                        <i class="fas fa-search search-form-icon"></i>
                        <input type="text"
                               name="searchString"
                               value="@ViewBag.CurrentFilter"
                               class="form-control premium-search-input"
                               placeholder="Search by patient name..."
                               onblur="if(this.value !== '@ViewBag.CurrentFilter') this.form.submit()"
                               onkeypress="if(event.keyCode == 13) { this.form.submit(); return false; }">

                        @if (!string.IsNullOrEmpty(ViewBag.CurrentFilter))
                        {
                            <a href="@Url.Action("Appointments")" class="clear-search-btn" title="Clear Filter">
                                <i class="fas fa-times-circle"></i>
                            </a>
                        }
                    </div>
                </form>
            </div>
        </div>

        <!-- Table -->
        <div class="card-body-premium p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light border-bottom border-1">
                        <tr>
                            <th class="px-5 py-4 border-0 small text-uppercase fw-bold text-secondary">Patient Name</th>
                            <th class="py-3 border-0 small text-uppercase fw-bold text-secondary">Date & Time</th>
                            <th class="py-3 border-0 small text-uppercase fw-bold text-secondary">Reason</th>
                            <th class="py-3 border-0 small text-uppercase fw-bold text-secondary">Status</th>
                            <th class="py-3 px-4 border-0 small text-uppercase fw-bold text-secondary text-center">Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="px-4">
                                        <div class="d-flex align-items-center gap-3">
                                            @{
                                                var nameParts = item.PatientName?.Split(' ', StringSplitOptions.RemoveEmptyEntries);
                                                var initials = (nameParts != null && nameParts.Length > 0)
                                                ? string.Join("", nameParts.Select(p => p[0]))
                                                : "PA";
                                            }

                                            <div class="avatar-sm-circle bg-primary-subtle text-primary fw-bold">
                                                @initials.ToUpper()
                                            </div>

                                            <div>
                                                <div class="patient-name">@item.PatientName</div>
                                                <small class="text-muted">Appointment Details</small>
                                            </div>
                                        </div>
                                    </td>

                                    <td>
                                        <div class="text-dark fw-bold">@item.AppointmentDate.ToString("MMM dd, yyyy")</div>
                                        <div class="small text-secondary">@item.AppointmentDate.ToString("hh:mm tt")</div>
                                    </td>

                                    <td class="small text-secondary fw-medium">@item.Reason</td>

                                    <td>
                                        @{
                                            var statusClass = item.Status switch
                                            {
                                                "Confirmed" => "bg-success-subtle text-success border-success",
                                                "Pending" => "bg-warning-subtle text-warning border-warning",
                                                "Cancelled" => "bg-danger-subtle text-danger border-danger",
                                                _ => "bg-info-subtle text-info border-info"
                                            };
                                        }
                                        <span class="badge @statusClass border border-opacity-10 px-3 py-2">
                                            @item.Status
                                        </span>
                                    </td>

                                    <td class="px-4">
                                        <div class="d-flex align-items-center justify-content-center gap-2">
                                            <a href="@Url.Action("AppointmentDetails", "Doctor", new { id = item.Id })"
                                               class="btn-action-view"
                                               title="View Details">
                                                <i class="fas fa-eye"></i>
                                                <span>View</span>
                                            </a>

                                            <div class="dropdown">
                                                <button class="btn-action-status dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                                    <i class="fas fa-edit me-1"></i> Status
                                                </button>

                                                <ul class="dropdown-menu dropdown-menu-end shadow-lg border-0">
                                                    <li class="dropdown-header small text-uppercase fw-bold text-muted">
                                                        Update Status
                                                    </li>

                                                    @foreach (var status in new[] { "Confirmed", "Completed", "Pending", "Cancelled" })
                                                    {
                                                        <li>
                                                            <form method="post" action="@Url.Action("UpdateAppointmentStatus", "Doctor")">
                                                                <input type="hidden" name="appointmentId" value="@item.Id" />
                                                                <input type="hidden" name="status" value="@status" />
                                                                <button type="submit" class="dropdown-item py-2">@status</button>
                                                            </form>
                                                        </li>
                                                    }
                                                </ul>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5 text-secondary">
                                    <div class="p-5 d-flex flex-column align-items-center">
                                        <i class="fas fa-calendar-times mb-3 opacity-25" style="font-size:64px;"></i>
                                        <h6 class="fw-bold mb-1">No Appointments Found</h6>
                                        <p class="small mb-0">Your schedule for this period is currently empty.</p>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/doctor-appointments.css" asp-append-version="true" />
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const filterButtons = document.querySelectorAll('.header-actions .btn');
            const tableRows = document.querySelectorAll('tbody tr:not(.text-center)');
            
            // Filter Buttons (All / Today)
            filterButtons.forEach(btn => {
                btn.addEventListener('click', function() {
                    filterButtons.forEach(b => b.classList.remove('active-toggle', 'text-white'));
                    filterButtons.forEach(b => b.classList.add('text-secondary'));
                    
                    this.classList.add('active-toggle');
                    this.classList.remove('text-secondary');
                    
                    const filter = this.textContent.trim();
                    const today = new Date().toLocaleDateString('en-US', { month: 'short', day: '2-digit', year: 'numeric' });

                    tableRows.forEach(row => {
                        if (filter === 'All') {
                            row.style.display = '';
                        } else if (filter === 'Today') {
                            const rowDate = row.querySelector('td:nth-child(2) .fw-bold').textContent.trim();
                            if (rowDate === today) {
                                row.style.display = '';
                            } else {
                                row.style.display = 'none';
                            }
                        }
                    });
                });
            });
        });
    </script>
}
