@model IEnumerable<CareFleet.Models.Doctor>
@{
    ViewData["Title"] = "Doctors";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.ActivePage = "Doctors";
    ViewBag.HeaderTitle = "Doctors Management";
    ViewBag.HideHeader = true;
}

<div class="fade-in">
    <!-- Premium Header Card -->
    <div class="premium-header-card mb-4">
        <div class="header-card-content">
            <div class="header-info">
                <h3 class="fw-bold text-white mb-2">Medical Professionals</h3>
                <p class="text-white-50 mb-0">Manage all registered doctors and their system access.</p>
            </div>
            <div class="header-actions">
                <a href="@Url.Action("Create", "Doctor")" class="btn-premium-light text-decoration-none">
                    <i class="fas fa-plus me-2"></i>Add New Doctor
                </a>
            </div>
        </div>
        <div class="header-bg-pattern"></div>
    </div>


<div class="table-container">
    <table class="data-table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Specialization</th>
                <th>License Number</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                @foreach (var doctor in Model)
                {
                    <tr>
                        <td>@doctor.FirstName @doctor.LastName</td>
                        <td>@doctor.Email</td>
                        <td>@doctor.PhoneNumber</td>
                        <td>@doctor.Specialization</td>
                        <td>@doctor.LicenseNumber</td>
                        <td>
                            @if (doctor.IsActive)
                            {
                                <span class="status-badge active">Active</span>
                            }
                            else
                            {
                                <span class="status-badge inactive">Inactive</span>
                            }
                        </td>
                        <td class="action-buttons">
                            <a href="@Url.Action("Edit", "Doctor", new { id = doctor.Id })" class="btn-edit" title="Edit">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form asp-action="ToggleStatus" asp-controller="Doctor" method="post" style="display: inline;">
                                <input type="hidden" name="id" value="@doctor.Id" />
                                <button type="submit" class="btn-toggle" title="@(doctor.IsActive ? "Deactivate" : "Activate")">
                                    <i class="fas fa-@(doctor.IsActive ? "toggle-on" : "toggle-off")"></i>
                                </button>
                            </form>
                            <form asp-action="Delete" asp-controller="Doctor" method="post" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this doctor?');">
                                <input type="hidden" name="id" value="@doctor.Id" />
                                <button type="submit" class="btn-delete" title="Delete">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center">No doctors found. <a href="@Url.Action("Create", "Doctor")">Add a new doctor</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
</div>


