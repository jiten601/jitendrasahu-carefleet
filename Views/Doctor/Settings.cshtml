@model CareFleet.Models.Doctor
@{
    ViewData["Title"] = "Profile Settings";
    Layout = "~/Views/Shared/_DoctorLayout.cshtml";
    
    var doctor = Model ?? new CareFleet.Models.Doctor { 
        Id = 0,
        FirstName = ViewBag.FirstName?.ToString() ?? "Doctor", 
        LastName = ViewBag.LastName?.ToString() ?? "", 
        Email = ViewBag.UserEmail?.ToString() ?? "doctor@carefleet.com",
        CreatedAt = DateTime.Now.AddYears(-1)
    };
    
    var initials = ((doctor.FirstName?.Length > 0 ? doctor.FirstName.Substring(0, 1) : "D") + 
                   (doctor.LastName?.Length > 0 ? doctor.LastName.Substring(0, 1) : "R")).ToUpper();
    
    // Calculate profile completion
    int completedFields = 0;
    int totalFields = 6;
    if (!string.IsNullOrEmpty(doctor.FirstName)) { completedFields++; }
    if (!string.IsNullOrEmpty(doctor.LastName)) { completedFields++; }
    if (!string.IsNullOrEmpty(doctor.Email)) { completedFields++; }
    if (!string.IsNullOrEmpty(doctor.Specialization)) { completedFields++; }
    if (!string.IsNullOrEmpty(doctor.LicenseNumber)) { completedFields++; }
    if (!string.IsNullOrEmpty(doctor.PhoneNumber)) { completedFields++; }
    int profileCompletion = (int)((completedFields / (double)totalFields) * 100);
    ViewBag.ActivePage = "Settings";
    ViewBag.HideHeader = true;
}

<div class="doctor-settings-page fade-in">
    <!-- Premium Header Card -->
    <div class="premium-header-card mb-4">
        <div class="header-card-content">
            <div class="header-info">
                <h2 class="fw-800 text-white mb-2">Account Settings</h2>
                <p class="text-white opacity-75 mb-0">Manage your profile, credentials, and security preferences.</p>
            </div>
            <div class="header-actions">
            </div>
        </div>
        <div class="header-bg-pattern"></div>
    </div>


    <div class="row g-4">
        <!-- Left Sidebar: Profile Summary -->
        <div class="col-lg-4">
            <div class="profile-summary-card sticky-sidebar">
                <!-- Avatar Section -->
                <div class="avatar-section">
                    <div class="avatar-wrapper">
                        <div class="avatar-large-circle mx-auto">@initials</div>
                        <div class="avatar-upload-overlay">
                            <label for="avatarUpload" class="upload-trigger m-0">
                                <i class="fas fa-camera"></i>
                            </label>
                            <input type="file" id="avatarUpload" accept="image/*" style="display: none;">
                        </div>
                    </div>
                    <h5 class="profile-name">Dr. @doctor.FirstName @doctor.LastName</h5>
                    <p class="profile-email">@doctor.Email</p>
                    <span class="verified-badge-inline">
                        <i class="fas fa-check-circle me-1"></i>Verified Practitioner
                    </span>
                </div>

                <!-- Profile Completion -->
                <div class="completion-section">
                    <div class="completion-header">
                        <span>Profile Completion</span>
                        <span class="text-primary">@profileCompletion%</span>
                    </div>
                    <div class="progress-bar-custom">
                        <div class="progress-fill" style="width: @(profileCompletion)%"></div>
                    </div>
                </div>

                <!-- Quick Links -->
                <div class="quick-actions-section">
                    <a href="#" class="quick-action-link" onclick="document.getElementById('securityTab').click(); return false;">
                        <i class="fas fa-shield-check"></i>
                        <span>Security & Privacy</span>
                        <i class="fas fa-chevron-right ms-auto v-small opacity-50"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Right Content: Tabbed Settings -->
        <div class="col-lg-8">
            <!-- Premium Tabs -->
            <div class="settings-tabs">
                <button class="tab-btn active" data-tab="personal" id="personalTab">
                    <i class="fas fa-user"></i> Personal Info
                </button>
                <button class="tab-btn" data-tab="professional" id="professionalTab">
                    <i class="fas fa-stethoscope"></i> Professional
                </button>
                <button class="tab-btn" data-tab="security" id="securityTab">
                    <i class="fas fa-shield-alt"></i> Security
                </button>
            </div>

            <form method="post" action="@Url.Action("Edit", "Doctor")" id="settingsForm">
                @Html.AntiForgeryToken()
                <input type="hidden" name="Id" value="@doctor.Id" />
                <input type="hidden" name="CreatedAt" value="@doctor.CreatedAt.ToString("yyyy-MM-ddTHH:mm:ss")" />
                <input type="hidden" name="Email" value="@doctor.Email" />
                <input type="hidden" name="IsActive" value="@doctor.IsActive.ToString().ToLower()" />

                <!-- Tab Content -->
                <div class="tab-content-container">
                    <!-- Personal Info Tab -->
                    <div class="tab-pane-premium active" data-content="personal">
                        <div class="dashboard-card">
                            <div class="border-bottom pb-3 mb-4">
                                <h5 class="fw-bold mb-1">Personal Details</h5>
                                <p class="text-muted small mb-0">Update your basic information to help patients identify you.</p>
                            </div>
                            <div class="row g-4">
                                <div class="col-md-6">
                                    <div class="form-group-modern">
                                        <label class="form-label-modern">First Name</label>
                                        <input type="text" class="form-control-modern" name="FirstName" value="@doctor.FirstName" placeholder="Enter first name" required>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group-modern">
                                        <label class="form-label-modern">Last Name</label>
                                        <input type="text" class="form-control-modern" name="LastName" value="@doctor.LastName" placeholder="Enter last name" required>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group-modern">
                                        <label class="form-label-modern">Email Address</label>
                                        <input type="email" class="form-control-modern locked-input" value="@doctor.Email" readonly disabled>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group-modern">
                                        <label class="form-label-modern">Phone Number</label>
                                        <input type="tel" class="form-control-modern" name="PhoneNumber" value="@doctor.PhoneNumber" placeholder="+1 234 567 890">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Professional Tab -->
                    <div class="tab-pane-premium" data-content="professional">
                        <div class="dashboard-card">
                            <div class="border-bottom pb-3 mb-4">
                                <h5 class="fw-bold mb-1">Medical Credentials</h5>
                                <p class="text-muted small mb-0">Manage your medical license and areas of expertise.</p>
                            </div>
                            <div class="row g-4">
                                <div class="col-md-6">
                                    <div class="form-group-modern">
                                        <label class="form-label-modern">Primary Specialization</label>
                                        <input type="text" class="form-control-modern" name="Specialization" value="@doctor.Specialization" placeholder="e.g., Cardiology" required>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group-modern">
                                        <label class="form-label-modern">Medical License Number</label>
                                        <div class="position-relative">
                                            <input type="text" class="form-control-modern locked-input" name="LicenseNumber" value="@doctor.LicenseNumber" readonly>
                                            <i class="fas fa-lock position-absolute top-50 end-0 translate-middle-y me-3 opacity-25"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Security Tab -->
                    <div class="tab-pane-premium" data-content="security">
                        <div class="dashboard-card">
                            <div class="border-bottom pb-3 mb-4">
                                <h5 class="fw-bold mb-1">Password & Security</h5>
                                <p class="text-muted small mb-0">Control your account security and authentication methods.</p>
                            </div>
                            <div class="security-notice">
                                <i class="fas fa-shield-check mt-1"></i>
                                <div>
                                    <p class="mb-0 fw-bold">Security Best Practices</p>
                                    <p class="mb-0 opacity-75">Enable 2FA and use a unique password of at least 12 characters.</p>
                                </div>
                            </div>
                            
                            <div class="security-item">
                                <div class="security-item-icon"><i class="fas fa-key"></i></div>
                                <div class="security-item-content">
                                    <h5>Account Password</h5>
                                    <p>Last changed 92 days ago</p>
                                </div>
                                <button type="button" class="btn btn-outline-primary btn-sm px-4 rounded-pill" disabled>Update</button>
                            </div>

                            <div class="security-item">
                                <div class="security-item-icon"><i class="fas fa-fingerprint"></i></div>
                                <div class="security-item-content">
                                    <h5>Two-Factor Authentication</h5>
                                    <p>Protect your account with an extra layer</p>
                                </div>
                                <button type="button" class="btn btn-primary btn-sm px-4 rounded-pill" disabled>Enable</button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Footer Actions -->
                <div class="d-flex justify-content-end gap-3 mt-4">
                    <button type="button" class="btn btn-light px-5 py-3 fw-bold rounded-3" onclick="window.location.href='@Url.Action("Dashboard", "Doctor")'">Cancel</button>
                    <button type="submit" class="btn btn-primary px-5 py-3 fw-bold rounded-3 shadow-sm">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/doctor-settings.css" asp-append-version="true" />
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const tabs = document.querySelectorAll('.tab-btn');
            const contents = document.querySelectorAll('.tab-pane-premium');

            tabs.forEach(tab => {
                tab.addEventListener('click', () => {
                    const target = tab.getAttribute('data-tab');

                    tabs.forEach(t => t.classList.remove('active'));
                    contents.forEach(c => c.classList.remove('active'));

                    tab.classList.add('active');
                    const targetContent = document.querySelector(`.tab-pane-premium[data-content="${target}"]`);
                    if (targetContent) {
                        targetContent.classList.add('active');
                    }
                });
            });

            // Trigger avatar upload (placeholder)
            const avatarUpload = document.getElementById('avatarUpload');
            if (avatarUpload) {
                avatarUpload.addEventListener('change', function() {
                    if(this.files && this.files[0]) {
                        alert('Avatar upload functionality will be implemented with backend integration.');
                    }
                });
            }
        });
    </script>
}
