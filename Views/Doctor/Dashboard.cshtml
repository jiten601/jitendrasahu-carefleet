@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_DoctorLayout.cshtml";
    ViewBag.ActivePage = "Dashboard";
    ViewBag.HideHeader = true;
}

<div class="doctor-dashboard-page fade-in">
    <!-- Premium Header Card -->
    <div class="premium-header-card mb-4">
        <div class="header-card-content">
            <div class="header-info">
                <h2 class="fw-800 text-white mb-2">Welcome Back, Dr. @ViewBag.FirstName!</h2>
                <p class="text-white opacity-75 mb-0">
                    Your patient overview and schedule for today.
                </p>
            </div>
            <div class="header-actions">
                <a href="@Url.Action("Appointments", "Doctor")" class="btn-premium-light">
                    <i class="fas fa-calendar-alt me-2"></i>Schedule
                </a>
            </div>
        </div>
        <div class="header-bg-pattern"></div>
    </div>


    <!-- Quick Stats Summary -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="dashboard-card stat-card-blue clickable-card" onclick="location.href='@Url.Action("Patients", "Doctor")'">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-secondary small fw-bold text-uppercase mb-1">Total Patients</p>
                        <h4 class="fw-800 mb-0">@ViewBag.TotalPatients</h4>
                    </div>
                    <div class="stat-icon-wrapper blue">
                        <i class="fas fa-users"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="dashboard-card stat-card-green clickable-card" onclick="location.href='@Url.Action("Patients", "Doctor")'">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-secondary small fw-bold text-uppercase mb-1">Active Patients</p>
                        <h4 class="fw-800 mb-0">@ViewBag.ActivePatients</h4>
                    </div>
                    <div class="stat-icon-wrapper green">
                        <i class="fas fa-clipboard-check"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="dashboard-card stat-card-yellow clickable-card" onclick="location.href='@Url.Action("Patients", "Doctor")'">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-secondary small fw-bold text-uppercase mb-1">New This Month</p>
                        <h4 class="fw-800 mb-0">@ViewBag.NewPatientsThisMonth</h4>
                    </div>
                    <div class="stat-icon-wrapper yellow">
                        <i class="fas fa-user-plus"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="dashboard-card stat-card-dark clickable-card" onclick="location.href='@Url.Action("Appointments", "Doctor")'">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-secondary small fw-bold text-uppercase mb-1">Upcoming</p>
                        <h4 class="fw-800 mb-0">@(((List<CareFleet.Models.Appointment>)ViewBag.UpcomingAppointments).Count)</h4>
                    </div>
                    <div class="stat-icon-wrapper dark">
                        <i class="fas fa-calendar-alt"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Main Column: Recent Activity -->
        <div class="col-lg-8">
            <div class="dashboard-card p-0 overflow-hidden">
                <div class="card-header-premium d-flex justify-content-between align-items-center border-bottom">
                    <h5 class="fw-bold mb-0">Recent Patient Activity</h5>
                    <a href="@Url.Action("Appointments", "Doctor")" class="text-primary small fw-bold text-decoration-none">View All</a>
                </div>
                <div class="table-responsive">
                    <table class="activity-table-modern">
                        <thead>
                            <tr>
                                <th class="ps-4">Patient</th>
                                <th>Reason</th>
                                <th>Status</th>
                                <th>Time</th>
                                <th class="text-end pe-4">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var recentAppointments = (List<CareFleet.Models.Appointment>)ViewBag.UpcomingAppointments;
                            }
                            @if (recentAppointments.Any())
                            {
                                @foreach (var appt in recentAppointments)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <div class="d-flex align-items-center gap-3">
                                                @{
                                                    var nameParts = appt.PatientName?.Split(' ', StringSplitOptions.RemoveEmptyEntries);
                                                    var initials = "";
                                                    if (nameParts != null && nameParts.Length > 0)
                                                    {
                                                        initials = string.Join("", nameParts.Select(p => p[0].ToString()));
                                                    }
                                                    else
                                                    {
                                                        initials = "PA";
                                                    }
                                                }
                                                <div class="avatar-sm-premium">@initials.ToUpper()</div>
                                                <div>
                                                    <h6 class="mb-0 fw-bold">@appt.PatientName</h6>
                                                    <small class="text-muted">Appointment</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>@appt.Reason</td>
                                        <td>
                                            @{
                                                var statusClass = appt.Status switch {
                                                    "Confirmed" => "status-pill-success",
                                                    "Pending" => "status-pill-warning",
                                                    "Cancelled" => "status-pill-danger",
                                                    _ => "status-pill-info"
                                                };
                                                var statusIcon = appt.Status switch {
                                                    "Confirmed" => "fa-check-circle",
                                                    "Pending" => "fa-clock",
                                                    "Cancelled" => "fa-times-circle",
                                                    _ => "fa-info-circle"
                                                };
                                            }
                                            <span class="status-pill @statusClass">
                                                <i class="fas @statusIcon me-1"></i>@appt.Status
                                            </span>
                                        </td>
                                        <td class="text-secondary small">@appt.TimeSlot</td>
                                        <td class="pe-4 text-end">
                                            <a href="@Url.Action("Appointments", "Doctor")" class="btn-action-light ms-auto"><i class="fas fa-eye"></i></a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center py-5 text-muted">
                                        <i class="fas fa-calendar-times d-block mb-3 opacity-25 fs-1"></i>
                                        No recent activity found.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Sidebar Column: Upcoming & Tasks -->
        <div class="col-lg-4">
            <!-- Upcoming Card -->
            <div class="dashboard-card">
                <div class="card-header-premium p-0 pb-3 border-0 bg-transparent">
                    <h5 class="fw-bold mb-0">Upcoming Today</h5>
                </div>
                <div class="card-body-mini p-0">
                    @{
                        var todayAppointments = recentAppointments.Where(a => a.AppointmentDate.Date == DateTime.Now.Date).ToList();
                    }
                    @if (todayAppointments.Any())
                    {
                        @foreach (var appt in todayAppointments)
                        {
                            <div class="appointment-item-mini d-flex gap-3 mb-4">
                                <div class="time-block-premium">
                                    <span class="day">@appt.AppointmentDate.Day</span>
                                    <span class="month">@appt.AppointmentDate.ToString("MMM")</span>
                                </div>
                                <div>
                                    <h6 class="fw-bold mb-1">@appt.PatientName</h6>
                                    <p class="text-muted v-small mb-0"><i class="far fa-clock me-1"></i>@appt.TimeSlot</p>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-4 text-muted border rounded-3 bg-light mb-4">
                            <i class="fas fa-calendar-check d-block mb-2 opacity-25 fs-2"></i>
                            <p class="small mb-0">No appointments for today.</p>
                        </div>
                    }
                    
                    <hr class="my-4">
                    <div class="d-grid">
                        <button class="btn btn-primary shadow-sm py-3 fw-bold rounded-3">
                            Video Consult <i class="fas fa-video ms-2"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/doctor-dashboard.css" asp-append-version="true" />
}
