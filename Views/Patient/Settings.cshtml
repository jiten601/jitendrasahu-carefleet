@model CareFleet.Models.Patient
@{
    ViewData["Title"] = "Profile Settings";
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
    
    var patient = Model ?? new CareFleet.Models.Patient { 
        Id = 0,
        FirstName = ViewBag.FirstName?.ToString() ?? "Patient", 
        LastName = ViewBag.LastName?.ToString() ?? "User", 
        Email = ViewBag.UserEmail?.ToString() ?? "patient@carefleet.com",
        CreatedAt = DateTime.Now.AddYears(-1)
    };
    
    var initials = ((patient.FirstName?.Length > 0 ? patient.FirstName.Substring(0, 1) : "P") + 
                   (patient.LastName?.Length > 0 ? patient.LastName.Substring(0, 1) : "A")).ToUpper();
    
    // Calculate profile completion
    int completedFields = 0;
    int totalFields = 6;
    if (!string.IsNullOrEmpty(patient.FirstName)) { completedFields++; }
    if (!string.IsNullOrEmpty(patient.LastName)) { completedFields++; }
    if (!string.IsNullOrEmpty(patient.Email)) { completedFields++; }
    if (!string.IsNullOrEmpty(patient.PhoneNumber)) { completedFields++; }
    if (!string.IsNullOrEmpty(patient.Address)) { completedFields++; }
    if (!string.IsNullOrEmpty(patient.BloodGroup)) { completedFields++; }
    int profileCompletion = (int)((completedFields / (double)totalFields) * 100);
}


<div class="settings-page fade-in">
    <!-- Header Card -->
    <div class="premium-header-card mb-4">
        <div class="header-card-content">
            <div class="header-info">
                <h2 class="fw-800 text-white mb-2">Profile Settings</h2>
                <p class="text-white opacity-75 mb-0">Manage your account preferences and security.</p>
            </div>
            <div class="header-actions">
                <a href="@Url.Action("Profile", "Patient")" class="btn-premium-light">
                    <i class="fas fa-user-circle me-2"></i>View My Profile
                </a>
            </div>
        </div>
        <div class="header-bg-pattern"></div>
    </div>

    <div class="row g-4">
        <!-- Left Sidebar: Profile Summary -->
        <div class="col-lg-4">
            <div class="profile-summary-card sticky-sidebar">
                <!-- Avatar Section -->
                <div class="avatar-section">
                    <div class="avatar-wrapper">
                        <div class="avatar-large-circle">@initials</div>
                        <div class="avatar-upload-overlay">
                            <label for="avatarUpload" class="upload-trigger" title="Change Photo">
                                <i class="fas fa-camera"></i>
                            </label>
                            <input type="file" id="avatarUpload" accept="image/*" style="display: none;">
                        </div>
                    </div>
                    <h4 class="profile-name">@patient.FirstName @patient.LastName</h4>
                    <p class="profile-email">@patient.Email</p>
                    <span class="verified-badge-inline">
                        <i class="fas fa-check-circle me-1"></i>Verified Patient
                    </span>
                </div>

                <!-- Profile Completion -->
                <div class="completion-section">
                    <div class="completion-header">
                        <span class="completion-label">Profile Completion</span>
                        <span class="completion-percentage">@profileCompletion%</span>
                    </div>
                    <div class="progress-bar-custom">
                        <div class="progress-fill" style="width: @(profileCompletion)%"></div>
                    </div>
                    <p class="completion-hint">
                        @if (profileCompletion < 100)
                        {
                            <text><i class="fas fa-info-circle me-1"></i>Complete your profile for better care</text>
                        }
                        else
                        {
                            <text><i class="fas fa-check-circle me-1"></i>Your profile is complete!</text>
                        }
                    </p>
                </div>

                <!-- Quick Actions -->
                <div class="quick-actions-section">
                    <a href="@Url.Action("Profile", "Patient")" class="quick-action-link">
                        <i class="fas fa-eye"></i>
                        <span>View My Profile</span>
                        <i class="fas fa-chevron-right ms-auto"></i>
                    </a>
                    <a href="#" class="quick-action-link" onclick="document.getElementById('securityTab').click(); return false;">
                        <i class="fas fa-key"></i>
                        <span> Change Password</span>
                        <i class="fas fa-chevron-right ms-auto"></i>
                    </a>
                </div>

                <!-- Account Info -->
                <div class="account-info-section">
                    <div class="info-row">
                        <span class="info-label">Member Since</span>
                        <span class="info-value">@patient.CreatedAt.ToString("MMM yyyy")</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Account Status</span>
                        <span class="status-badge-active">Active</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Content: Tabbed Settings -->
        <div class="col-lg-8">
            <!-- Tab Navigation -->
            <div class="settings-tabs">
                <button class="tab-btn active" data-tab="personal" id="personalTab">
                    <i class="fas fa-user me-2"></i>Personal Info
                </button>
                <button class="tab-btn" data-tab="medical" id="medicalTab">
                    <i class="fas fa-file-medical me-2"></i>Medical Info
                </button>
                <button class="tab-btn" data-tab="security" id="securityTab">
                    <i class="fas fa-shield-alt me-2"></i>Security
                </button>
            </div>

            <form method="post" action="@Url.Action("Edit", "Patient")" id="settingsForm">
                @Html.AntiForgeryToken()
                <input type="hidden" name="Id" value="@patient.Id" />
                <input type="hidden" name="CreatedAt" value="@patient.CreatedAt.ToString("yyyy-MM-ddTHH:mm:ss")" />
                <input type="hidden" name="Email" value="@patient.Email" />

                <!-- Tab Content Container -->
                <div class="tab-content-wrapper">
                    <!-- Personal Info Tab -->
                    <div class="tab-content active" data-content="personal">
                        <div class="settings-card">
                            <div class="card-header-settings">
                                <h3 class="card-title-settings">
                                    <i class="fas fa-user-circle me-2"></i>Personal Information
                                </h3>
                                <p class="card-subtitle">Update your personal details and contact information</p>
                            </div>
                            <div class="card-body-settings">
                                <div class="row g-4">
                                    <div class="col-md-6">
                                        <div class="form-group-modern">
                                            <label class="form-label-modern">First Name</label>
                                            <input type="text" class="form-control-modern" name="FirstName" value="@patient.FirstName" required>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group-modern">
                                            <label class="form-label-modern">Last Name</label>
                                            <input type="text" class="form-control-modern" name="LastName" value="@patient.LastName" required>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group-modern">
                                            <label class="form-label-modern">Email Address</label>
                                            <input type="email" class="form-control-modern" value="@patient.Email" readonly disabled style="background: #e9ecef;">
                                            <small class="form-hint">Email cannot be changed for security reasons</small>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group-modern">
                                            <label class="form-label-modern">Phone Number</label>
                                            <input type="tel" class="form-control-modern" name="PhoneNumber" value="@patient.PhoneNumber" placeholder="+1 (555) 000-0000">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group-modern">
                                            <label class="form-label-modern">Date of Birth</label>
                                            <input type="date" class="form-control-modern" name="DateOfBirth" value="@(patient.DateOfBirth == default ? "" : patient.DateOfBirth.ToString("yyyy-MM-dd"))">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group-modern">
                                            <label class="form-label-modern">Gender</label>
                                            <select class="form-control-modern" name="Gender">
                                                <option value="Male" selected="@(patient.Gender == "Male")">Male</option>
                                                <option value="Female" selected="@(patient.Gender == "Female")">Female</option>
                                                <option value="Other" selected="@(patient.Gender == "Other")">Other</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group-modern">
                                            <label class="form-label-modern">Residential Address</label>
                                            <textarea class="form-control-modern" name="Address" rows="2">@patient.Address</textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Medical Info Tab -->
                    <div class="tab-content" data-content="medical">
                        <div class="settings-card">
                            <div class="card-header-settings">
                                <h3 class="card-title-settings">
                                    <i class="fas fa-file-medical me-2"></i>Medical Profile
                                </h3>
                                <p class="card-subtitle">Manage your medical history and clinical information</p>
                            </div>
                            <div class="card-body-settings">
                                <div class="row g-4">
                                    <div class="col-md-6">
                                        <div class="form-group-modern">
                                            <label class="form-label-modern">Blood Group</label>
                                            <input type="text" class="form-control-modern" name="BloodGroup" value="@patient.BloodGroup" placeholder="e.g. O+">
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group-modern">
                                            <label class="form-label-modern">Medical History</label>
                                            <textarea class="form-control-modern" name="MedicalHistory" rows="5" placeholder="List any allergies, chronic conditions, or past surgeries...">@patient.MedicalHistory</textarea>
                                            <small class="form-hint"><i class="fas fa-lock me-1"></i> This information is strictly confidential and only shared with your doctors.</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Security Tab -->
                    <div class="tab-content" data-content="security">
                        <div class="settings-card">
                            <div class="card-header-settings">
                                <h3 class="card-title-settings">
                                    <i class="fas fa-lock me-2"></i>Security Settings
                                </h3>
                                <p class="card-subtitle">Manage your password and account security</p>
                            </div>
                            <div class="card-body-settings">
                                <div class="security-notice">
                                    <i class="fas fa-info-circle"></i>
                                    <div>
                                        <strong>Password Management</strong>
                                        <p>To change your password, please use the secure change password flow. For security, old passwords are never displayed.</p>
                                    </div>
                                </div>
                                <div class="row g-4 mt-3">
                                    <div class="col-12">
                                        <div class="security-item">
                                            <div class="security-item-icon">
                                                <i class="fas fa-key"></i>
                                            </div>
                                            <div class="security-item-content">
                                                <h5>Current Password</h5>
                                                <p>••••••••••••</p>
                                            </div>
                                            <button type="button" class="btn-security-action">
                                                Update Password
                                            </button>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="security-item">
                                            <div class="security-item-icon">
                                                <i class="fas fa-shield-alt"></i>
                                            </div>
                                            <div class="security-item-content">
                                                <h5>Two-Factor Authentication</h5>
                                                <p>Enhance your account security</p>
                                            </div>
                                            <button type="button" class="btn-security-action" disabled>
                                                Coming Soon
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="settings-actions">
                    <button type="button" class="btn-cancel" onclick="window.location.href='@Url.Action("Dashboard", "Patient")'">
                        <i class="fas fa-times me-2"></i>Cancel
                    </button>
                    <button type="submit" class="btn-save">
                        <i class="fas fa-save me-2"></i>Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/patient-settings.css" asp-append-version="true" />
}

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const tabs = document.querySelectorAll('.tab-btn');
        const contents = document.querySelectorAll('.tab-content');

        tabs.forEach(tab => {
            tab.addEventListener('click', () => {
                const target = tab.getAttribute('data-tab');

                tabs.forEach(t => t.classList.remove('active'));
                tab.classList.add('active');

                contents.forEach(content => {
                    if (content.getAttribute('data-content') === target) {
                        content.classList.add('active');
                    } else {
                        content.classList.remove('active');
                    }
                });
            });
        });
    });
</script>
