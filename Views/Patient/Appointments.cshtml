@model IEnumerable<CareFleet.Models.Appointment>
@{
    ViewData["Title"] = "My Appointments";
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
    ViewBag.ActivePage = "Appointments";
    ViewBag.HeaderTitle = "Appointments";
}

<div class="appointments-page fade-in">
    <!-- Header Card -->
    <div class="premium-header-card mb-4">
        <div class="header-card-content">
            <div class="header-info">
                <h1 class="fw-bold text-white mb-2">My Appointments</h1>
                <p class="text-white-50 mb-0">View, manage, and schedule your health consultations.</p>
            </div>
            <div class="header-actions">
                <a href="@Url.Action("Book", "Appointment")" class="btn-premium-light text-decoration-none d-inline-block">
                    <i class="fas fa-plus me-2"></i>Book New Appointment
                </a>
            </div>
        </div>
        <div class="header-bg-pattern"></div>
    </div>

    <!-- Main Content Card -->
    <div class="dashboard-card border-0 shadow-sm overflow-hidden">
        <div class="card-header-premium">
            <div class="d-flex align-items-center justify-content-between flex-wrap gap-3">
                <div class="d-flex align-items-center gap-2">
                    <span class="header-icon-box">
                        <i class="fas fa-calendar-alt"></i>
                    </span>
                    <div>
                        <h5 class="mb-0 fw-bold">Appointment Schedule</h5>
                        <small class="text-secondary">Overview of your upcoming and past visits</small>
                    </div>
                </div>
                <div class="d-flex gap-2">
                    <div class="search-box-modern">
                        <i class="fas fa-search"></i>
                        <input type="text" placeholder="Search appointments...">
                    </div>
                    <button class="btn-filter-modern">
                        <i class="fas fa-filter me-2"></i>Filter
                    </button>
                </div>
            </div>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="activity-table-modern">
                    <thead>
                        <tr>
                            <th class="ps-4">Medical Expert</th>
                            <th>Date & Time</th>
                            <th>Specialization</th>
                            <th>Status</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-sq-sm me-3">
                                                @{
                                                    var docInitials = item.DoctorName?.Split(' ', StringSplitOptions.RemoveEmptyEntries)
                                                                        .Select(p => p[0].ToString())
                                                                        .Aggregate((a, b) => a + b) ?? "DOC";
                                                }
                                                <span>@docInitials.ToUpper()</span>
                                            </div>
                                            <div>
                                                <div class="doctor-name">@item.DoctorName</div>
                                                <div class="x-small text-muted">Consultant</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="date-box">
                                            <div class="fw-bold">@item.AppointmentDate.ToString("MMM dd, yyyy")</div>
                                            <div class="text-secondary small">@item.TimeSlot</div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="spec-pill">Medical Expert</span>
                                    </td>
                                    <td>
                                        @{
                                            var (badgeClass, icon) = item.Status switch
                                            {
                                                "Confirmed" => ("status-pill-success", "fa-check-circle"),
                                                "Pending" => ("status-pill-warning", "fa-clock"),
                                                "Cancelled" => ("status-pill-danger", "fa-times-circle"),
                                                _ => ("status-pill-info", "fa-info-circle")
                                            };
                                        }
                                        <span class="status-pill @badgeClass">
                                            <i class="fas @icon me-1"></i>@item.Status
                                        </span>
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="d-flex justify-content-end gap-2">
                                            <a href="@Url.Action("AppointmentDetails", "Patient", new { id = item.Id })" class="btn-action-light" title="Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="@Url.Action("Book", "Appointment", new { rescheduleId = item.Id })" class="btn-action-light" title="Reschedule">
                                                <i class="fas fa-calendar-day"></i>
                                            </a>
                                            <form method="post" action="@Url.Action("CancelAppointment", "Patient")" onsubmit="return confirm('Are you sure you want to cancel this appointment?');" style="display:inline;">
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="submit" class="btn-action-danger" title="Cancel">
                                                    <i class="fas fa-trash-alt"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5">
                                    <div class="empty-state">
                                        <div class="empty-state-icon">
                                            <i class="fas fa-calendar-times"></i>
                                        </div>
                                        <h5 class="fw-bold mt-3">No Appointments Found</h5>
                                        <p class="text-muted">You don't have any appointments scheduled at the moment.</p>
                                        <button class="btn btn-primary px-4 mt-2" onclick="location.href='@Url.Action("Book", "Appointment")'">
                                            Schedule Now
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .header-bg-pattern {
        position: absolute;
        top: 0;
        right: 0;
        width: 300px;
        height: 100%;
        background-image: radial-gradient(circle, rgba(255,255,255,0.1) 2px, transparent 2px);
        background-size: 20px 20px;
        opacity: 0.5;
        z-index: 1;
    }

    .card-header-premium {
        padding: 25px 30px;
        background: white;
        border-bottom: 1px solid var(--border-main);
    }

    .header-icon-box {
        width: 45px;
        height: 45px;
        background: rgba(84, 119, 146, 0.1);
        color: var(--primary-blue);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 18px;
    }

    .search-box-modern {
        position: relative;
        width: 250px;
    }

    .search-box-modern i {
        position: absolute;
        left: 12px;
        top: 50%;
        transform: translateY(-50%);
        color: var(--text-secondary);
        font-size: 14px;
    }

    .search-box-modern input {
        width: 100%;
        padding: 10px 15px 10px 38px;
        border-radius: 10px;
        border: 1px solid var(--border-main);
        font-size: 0.9rem;
        background: #f8fafc;
        transition: all 0.3s;
    }

    .search-box-modern input:focus {
        background: white;
        border-color: var(--primary-blue);
        outline: none;
    }

    .btn-filter-modern {
        padding: 10px 20px;
        border-radius: 10px;
        border: 1px solid var(--border-main);
        background: white;
        font-weight: 600;
        font-size: 0.9rem;
        color: var(--text-primary);
        transition: all 0.2s;
    }

    .btn-filter-modern:hover {
        background: #f8fafc;
        border-color: #cbd5e1;
    }

    .activity-table-modern {
        width: 100%;
        border-collapse: collapse;
    }

    .activity-table-modern th {
        background: #fcfcfc;
        padding: 18px 20px;
        text-align: left;
        font-size: 12px;
        font-weight: 700;
        color: var(--text-secondary);
        text-transform: uppercase;
        letter-spacing: 0.8px;
        border-bottom: 1px solid var(--border-main);
    }

    .activity-table-modern td {
        padding: 20px;
        border-bottom: 1px solid #f8fafc;
        vertical-align: middle;
    }

    .activity-table-modern tr:hover {
        background-color: #fbfcfe;
    }

    /* Avatars & Pills */
    .avatar-sq-sm {
        width: 40px;
        height: 40px;
        background: #ebf4ff;
        color: var(--primary-blue);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 0.8rem;
    }

    .spec-pill {
        padding: 4px 12px;
        background: #f1f5f9;
        color: #475569;
        border-radius: 8px;
        font-size: 12px;
        font-weight: 600;
    }

    .status-pill {
        display: inline-flex;
        align-items: center;
        padding: 6px 14px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 700;
    }

    .status-pill-success { background: rgba(16, 185, 129, 0.1); color: var(--success); }
    .status-pill-warning { background: rgba(245, 158, 11, 0.1); color: var(--warning); }
    .status-pill-danger { background: rgba(239, 68, 68, 0.1); color: var(--danger); }
    .status-pill-info { background: rgba(59, 130, 246, 0.1); color: var(--info); }

    .btn-action-light {
        width: 36px;
        height: 36px;
        border-radius: 10px;
        background: #f8fafc;
        border: 1px solid #e2e8f0;
        color: #64748b;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s;
    }

    .btn-action-light:hover {
        background: white;
        border-color: var(--primary-blue);
        color: var(--primary-blue);
        transform: translateY(-2px);
    }

    .btn-action-danger {
        width: 36px;
        height: 36px;
        border-radius: 10px;
        background: #fff5f5;
        border: 1px solid #fed7d7;
        color: #e53e3e;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s;
    }

    .btn-action-danger:hover {
        background: #e53e3e;
        color: white;
        border-color: #e53e3e;
        transform: translateY(-2px);
    }

    .empty-state {
        padding: 40px;
    }

    .empty-state-icon {
        font-size: 60px;
        color: #e2e8f0;
    }

    .fade-in {
        animation: fadeIn 0.5s ease-in-out;
    }

    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>
