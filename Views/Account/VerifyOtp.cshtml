@{
    ViewData["Title"] = "Verify Email";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CareFleet - Verify Email</title>

    <link rel="stylesheet" href="~/css/auth.css" />
</head>
<body>
    <div class="auth-container">
        <div class="auth-card">
            <div class="logo-container" style="text-align: center; margin-bottom: 20px;">
                <img src="~/images/FinalLogo.png" alt="CareFleet Logo" style="max-width: 200px; height: auto;" />
            </div>

            <h1 class="app-title">CareFleet</h1>
            <h2 class="register-title">Email Verification</h2>

            <p style="text-align:center; margin-bottom:15px;">
                We have sent a 6-digit OTP to your email.<br />
                Please enter it below to verify your account.
            </p>

            <form asp-action="VerifyOtp" method="post" class="auth-form">

                <div class="form-group">
                    <label for="otp">OTP Code</label>
                    <input type="text"
                           id="otp"
                           name="otp"
                           placeholder="Enter 6-digit OTP"
                           maxlength="6"
                           required />
                </div>

                @if (ViewBag.Error != null)
                {
                    <div class="error-message">
                        @ViewBag.Error
                    </div>
                }

                <button type="submit" class="btn-primary">
                    Verify Account
                </button>

                <p class="auth-link">
                    Didn’t receive the code?
                    <a asp-action="Register">Register again</a>
                </p>

            </form>

        </div>
    </div>
</body>
</html>
